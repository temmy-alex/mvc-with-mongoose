<%- include('../include/head.ejs') %>
    <div class="container">
        <% if(errorMessage) { %>
            <%- include('../include/message.ejs') %>
        <% } %>
        
        <h1 class="text-center mt-4 mb-4">Sign Up</h1>
        <form action="/signup" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <input id="email" 
                    class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'is-invalid' : '' %>" 
                    type="text" 
                    name="email"
                    value="<%= oldInput.email %>">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" 
                    class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'is-invalid' : '' %>" 
                    type="password" 
                    name="password"
                    value="<%= oldInput.password %>">
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input id="confirmPassword" 
                    class="form-control <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'is-invalid' : '' %>"  
                    type="password" 
                    name="confirmPassword"
                    value="<%= oldInput.confirmPassword %>">
            </div>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
<%- include('../include/footer.ejs') %>